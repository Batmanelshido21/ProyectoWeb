<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtdmybatis-3-mapper.dtd">

<mapper namespace="Foro">

  <insert id="enviarMensajeDocente" parameterType="pojos.Mensaje">
        INSERT INTO mensaje (mensaje,Foro_idForo,Docente_clave)
        VALUES(#{mensaje},#{Foro_idForo},#{Docente_clave})        
  </insert>
  
  <insert id="enviarMensajeAlumno" parameterType="pojos.Mensaje">
        INSERT INTO mensaje (mensaje,Foro_idForo,Alumno_clave)
        VALUES(#{mensaje},#{Foro_idForo},#{Alumno_clave})        
  </insert>        
  
  <select id="getMensajesForo" resultType = "pojos.Mensaje" parameterType="int">
    SELECT
    mensaje.mensaje,
    mensaje.Docente_clave,
    mensaje.Alumno_clave
    FROM mensaje WHERE mensaje.Foro_idForo = #{Foro_idForo}
  </select>    

</mapper>
